<!doctype html>
<html>

<head>
	<title>{{title}}</title>
	<link rel="stylesheet" href="/stylesheets/style.css" />
	{{{block 'head'}}}
</head>

<body>
	{{{body}}}
	<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.5.3/webfont.js"></script>

	<script>
			function tick() {
				$('.widget-EventList li:first').fadeOut(1000, function () {
					$('.widget-EventList li').fadeOut(0);
					$(this).appendTo($('.widget-EventList'));
					$(".widget-EventList li:first").fadeIn(1000, function() {});
				});
			}
			setInterval(function () {
				tick();
			}, 5000);
	</script>
</body>

</html>
