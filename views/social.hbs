<div id="popup-container" class="position-{{position}}">
	{{#each config.social.accounts}}
	<div class="popup {{@key}}-pop animate-popup">
		<div class="left">
			<span class="{{@key}}"></span>
		</div>
		<div class="right username">
			<span data-name="{{@key}}"></span>
		</div>
	</div>
	{{/each}}
</div>

{{#section 'scripts'}}
<script>
	var settings = {
		// Simply change the name in quotes with your name
		social: {
			{{#each config.social.accounts}}
			{{@key}}: "{{this.text}}",
			{{/each}}
			NONE: ""
		},

		// Gaming Popup Options
		popup: {
			//
			// Time to update
			//
			// Time each network animation takes in seconds
			delay: {{config.social.delay}},
			// The delay for the animation cycle to restart in seconds
			pauseTime: {{config.social.pause}}
		}
	};

</script>
<script src="/javascript/social.js"></script>
{{/section}}

{{#section 'head'}}
<link href='https://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="/stylesheets/social.css" type="text/css">
<link rel="stylesheet" href="/social/stylesheet/" type="text/css">
{{/section}}

